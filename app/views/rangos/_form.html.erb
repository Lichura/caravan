<%= form_for(@rango, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @rango.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@rango.errors.count, "error") %> prohibited this rango from being saved:</h4>

      <ul>
      <% @rango.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :letras, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :letras, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :numero, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :numero, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :digito, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :digito, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pedido_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :pedido_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :user_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to rangos_path, class: 'btn btn-default pull-right' do %>
          Cancelar
      <% end -%>
    </div>
  </div>
<% end %>

