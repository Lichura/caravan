<%= form_for(@numerador, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @numerador.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@numerador.errors.count, "error") %> prohibited this pais from being saved:</h4>

      <ul>
      <% @numerador.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :comprobante, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :comprobante, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :puntoDeVenta, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :puntoDeVenta, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :numero, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :numero, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
      <%= link_to numeradors_path, class: 'btn btn-default pull-right' do %>
          Cancelar
      <% end -%>
    </div>
  </div>
<% end %>

