<%= form_for(@cheque, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @cheque.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@cheque.errors.count, "error") %> prohibited this ciudad from being saved:</h4>

      <ul>
      <% @cheque.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="form-group">
    <%= f.label :fecha, "Fecha de pago", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.date_field :fecha, :value => Date.today, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :numero, "Banco y Numero", class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
    <%= f.text_field :banco, class: "cheque-banco form-control" %>
    </div>
    <div class="col-sm-8">
    <%= f.text_field :numero, class: "cheque-numero form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :monto, "Monto", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
    <%= f.text_field :monto, class: "monto-cheque form-control" %>
    </div>
  </div>


    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Enviar", class: "btn btn-primary" %>
    <% end %>

        <%= link_to cheques_path, class: 'btn btn-danger pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Cheques
      <% end %>
    </div>
  </div>