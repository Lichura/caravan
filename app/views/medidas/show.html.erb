

<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Medida:</h2></div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt>Codigoafip:</dt>
            <dd><%= @medida.codigoAfip %></dd>

            <dt>Nombre:</dt>
            <dd><%= @medida.nombre %></dd>

            <dt>Abreviatura:</dt>
            <dd><%= @medida.abreviatura %></dd>

            <dt>Descripcion:</dt>
            <dd><%= @medida.descripcion %></dd>

          </dl>
        </div>
      </div>
    </div>
      <%= link_to medidas_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Ciudades
      <% end %>
      <%= link_to medida_path(@medida), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta ciudad?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_medida_path(@medida),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>