              <thead>
              <tr>
              <th>Producto</th>
              <th>Precio</th>
              <th>Cantidad</th>
              <th>Subtotal</th>
            </tr>
            </thead>
            <tbody>
              <% @pedido.detalles.each do |producto| %>
                 <%= producto.text_field :cantidad %>
              <% end %>
            </tbody>
          </table>
        </div>
