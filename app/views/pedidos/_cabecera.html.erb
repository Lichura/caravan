  <div class="form-group">
    <%= f.label :fecha, "Fecha: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= Date.today %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comprobanteNumero, "Nota de pedido N: " , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <% if @pedido.comprobanteNumero  %>
        <%= f.label :comprobanteNumero, :value => @pedido.comprobanteNumero %>
      <% else %>
        <%= @numeroDePedido %>
        <%= f.hidden_field :comprobanteNumero, :value => @numeroDePedido %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cuit, "Seleccionar cliente", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:cuit, current_user.clientes.all, :id, :razonSocial,  {include_blank: true}, {:class => "form-control"}) %>
    </div>
  </div>
  <div id="Cliente">
  </div>

  <div class="form-group">
    <%= f.label :condicionCompra, "Condicion de compra", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :condicionCompra, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sucursal, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :sucursal, class: "form-control" %>
    </div>
  </div>

  <script type="text/javascript">
  $(document).ready(function(){
    $('#pedido_pedido_cuit').combobox();
  });
</script>