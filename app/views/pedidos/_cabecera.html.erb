  <div class="form-group">
    <%= f.label :fecha, "Fecha: ", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :fecha, :value => Date.today %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comprobanteNumero, "Nota de pedido N: " , class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <% if @pedido.comprobanteNumero  %>
        <%= f.label :comprobanteNumero, :value => @pedido.comprobanteNumero %>
      <% else %>
        <%= @numeroDePedido %>
        <%= f.hidden_field :comprobanteNumero, :value => @numeroDePedido %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user_id, "Seleccionar cliente", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <% if @pedido.new_record? %>
        <%= f.collection_select(:user_id, current_user.clientes.all, :id, :razonSocial,  {include_blank: true}, {:class => "form-control"}) %>


        <%= link_to 'Nuevo usuario', nuevo_usuario_pedido_path,  {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-usuario'}  %>


      <div id="modal-usuario" class="modal hide fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

      <% else %>
      <%= f.collection_select(:user_id, User.all, :id, :razonSocial,  {include_blank: true, :selected => @pedido.user_id}, {:class => "form-control"}) %>
      <% end %>
    </div>
  </div>
  <div id="Cliente">
    <%= render 'cliente', locals: {f: f} %>
  </div>



  <script type="text/javascript">
  $(document).ready(function(){
    $('#pedido_pedido_cuit').combobox();

      $('#myModal').on('shown.bs.modal', function () {
        $('#myInput').focus()
      })
  });
</script>