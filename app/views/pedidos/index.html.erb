<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading pedidos"><h3>Pedidos</h3></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6 col-lg-offset-3">
            <%= form_tag(pedidos_path, :method => "get", id: "search-form") do %>
            <div class="input-group">
              <%= text_field_tag :search,  params[:search], placeholder: "Buscar pedidos", class: "form-control"%>
              <span class="input-group-btn">
                <%= submit_tag "Buscar", class: 'btn btn-default'%>
              </span>
            </div>
           <% end %>
          </div>
        </div>
      <div class="row" style="height: 50px;"></div>
        <div class="table-responsive">
          <table class="table table-hover">
              <thead class="pedidos">
        <th>Cuit</th>
        <th>Comprobante</th>
        <th>Fecha</th>
        <th>Cantidad</th>
        <th>Remitido</th>
        <th>Facturado</th>
        <th>Mostrar</th>
        <th>Editar</th>
        <th>Eliminar</th>
      </thead>
      <tbody>
        <% @pedidos.each do |pedido| %>
        <tr><!-- se podria utilizar para ver el proximo turno -->
          <td><%= pedido.cuit %></td>
          <td><%= pedido.comprobanteNumero %></td>
          <td><%= pedido.created_at.to_formatted_s(:day_month_and_year) %></td>
          <td><%= pedido.cantidadTotal %></td>
          <td>
              <% if pedido.estado == "Pendiente de remitir" or pedido.estado == "Remitido parcial" %>
                <span class="glyphicon glyphicon-check"><%= link_to "Remito", {controller:"remitos", action:"new", id: pedido} %></span>
              <% else %>
                <span class="glyphicon glyphicon-unchecked"></span>
              <% end %>
          </td>
          <td>
              <% if pedido.facturado %>
                <span class="glyphicon glyphicon-check"><%= link_to '', pedido %></span>
              <% else %>
                <span class="glyphicon glyphicon-unchecked"></span>
              <% end %>
          </td>
          <td>
                <%= link_to pedido_path(pedido) do %>
                  <i class="glyphicon glyphicon-list-alt"></i>
                <% end %>
          </td>
          <td>
            <%= link_to edit_pedido_path(pedido) do %>
             <i class="glyphicon glyphicon-pencil"></i>
            <% end %>
          </td>
          <td>

            <%= link_to pedido_path(pedido.id), method: :delete, data: { confirm: 'Esta seguro que desea eliminar este pedido?' } do %>
              <i class="glyphicon glyphicon-trash"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
      </table>
      </div>
<%= will_paginate @pedidos, renderer: BootstrapPagination::Rails %>
      <button type="button" class="btn btn-primary pull-right">
        <%= link_to 'Nuevo Pedido', new_pedido_path %>
      </button>
</div>


