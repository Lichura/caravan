
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>pago</h2></div>
        <div class="panel-body">
         <dl class="dl-horizontal">
          <dt>Distribuidor:</dt>
          <dd><%= @pago.distribuidor_id %></dd>

          <dt>Numero:</dt>
          <dd><%= @pago.numero %></dd>

          <dt>Mediodepago:</dt>
          <dd><%= @mediosDePago[@pago.medioDePago] %></dd>

          <dt>Monto:</dt>
          <dd><%= @pago.monto %></dd>

          <dt>Estado:</dt>
          <dd><%= @pago.estado %></dd>

          <% if @pago.cheques.any? %>
            <% @pago.cheques.all do |cheque| %>
              <div class="cheque-formato">
                <span class="cheque-fecha"><%= cheque.fecha %></span>
                <span class="cheque-banco"><%= cheque.banco %></span>
                <span class="cheque-numero"><%= cheque.numero %></span>
                <span class="cheque-monto"><%= cheque.monto %></span>               
              </div>
            <% end %>
          <% end %>

        </dl>
        </div>
      </div>
    </div>
      <%= link_to pagos_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Pagos
      <% end %>
      <%= link_to pago_path(@pago), method: :delete, data: { confirm: 'Esta seguro que desea eliminar este pago?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_pago_path(@pago),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
      <%= link_to "PDF", pago_path(@pago, :format => 'pdf'),  {class: "btn btn-warning"} %>
  </div>
</div>