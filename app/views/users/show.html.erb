<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Usuario:</h2></div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt>Cuit:</dt>
            <dd><%= @user.cuit %></dd>

              <dt>Razon Social:</dt>
            <dd><%= @user.razonSocial %></dd>

            <dt>Provincia:</dt>
            <dd><%= @user.provincia_id %></dd>

            <% @user.user_sucursals.each do |sucursal| %>
              <dt>Nombre:</dt>
              <dd><%= sucursal.nombre %></dd>
            <% end %>
            <dt>Distribuidor:</dt>
            <dd><%= @user.clientes.email %></dd>
          </dl>
        </div>
      </div>
    </div>
      <%= link_to users_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Usuarios
      <% end %>
      <%= link_to user_path(@user), method: :delete, data: { confirm: 'Esta seguro que desea eliminar este usuario?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_user_path(@user),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>