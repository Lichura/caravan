<%= form_for(@mensaje, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @mensaje.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span></button>
      <h4><%= pluralize(@mensaje.errors.count, "error") %> prohibited this pais from being saved:</h4>

      <ul>
      <% @mensaje.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= f.label :nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :empresa, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :empresa, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :telefono, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :telefono, class: "form-control" %>
    </div>
  </div>

   <div class="form-group">
    <%= f.label :texto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :texto, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Enviar", class: "btn btn-primary  pull-right" %>
      <%= link_to mensajes_path, class: 'btn btn-danger' do %>
          Cancelar
      <% end -%>
    </div>
  </div>
<% end %>
