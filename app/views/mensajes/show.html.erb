
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2><%= Moneda %></h2></div>
        <div class="panel-body">
         <dl class="dl-horizontal"><p id="notice"><%= notice %></p>
          <dt>Nombre:</dt>
          <dd><%= @mensaje.nombre %></dd>

          <dt>Empresa:</dt>
          <dd><%= @mensaje.empresa %></dd>

          <dt>Simbolo:</dt>
          <dd><%= @mensaje.email %></dd>

          <dt>Telefono:</dt>
          <dd><%= @mensaje.telefono %></dd>

          <dt>Texto:</dt>
          <dd><%= @mensaje.texto %></dd>
        </dl>
        </div>
      </div>
    </div>
      <%= link_to mensajes_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Mensajes
      <% end %>
      <%= link_to mensaje_path(@mensaje), method: :delete, data: { confirm: 'Esta seguro que desea eliminar este mensaje?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_mensaje_path(@mensaje),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>

