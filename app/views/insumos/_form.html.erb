<%= form_for(@insumo, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @insumo.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@insumo.errors.count, "error") %> prohibited this ciudad from being saved:</h4>

      <ul>
      <% @insumo.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :descripcion, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :descripcion, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :precio, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :precio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :unidad_medida, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:unidad_medida, Medida.all, :id, :nombre, {:class => "form-control"}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :alerta, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :alerta, class: "form-control" %>
    </div>
  </div>
    <div class="form-group">
    <%= f.label :imagen, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :imagen, class: "form-control" %>
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Enviar",  class: "btn btn-primary" %>
      <%= link_to insumos_path, class: 'btn btn-default pull-right' do %>
          Cancelar
      <% end -%>
    </div>
  </div>
<% end %>

