
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>insumos</h3></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6 col-sm-offset-3">
            <div class="input-group">
              <input type="text" class="form-control">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
          </div>
        </div>
        <div class="row" style="height: 100px;"></div>
          <div class="table-responsive">
            <table class="table table-hover">
                <thead style="color: white; background-color:rgba(30,20,20, 0.7);">
                  <tr>
                                            <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Color</th>
                        <th>Precio</th>
                        <th>Unidad medida</th>
                        <th>Stock fisico</th>
                        <th>Stock reservado</th>
                        <th>Stock disponible</th>
                        <th>Stock pedido</th>

                    <th>Mostrar</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                    <th>Duplicar</th>
                  </tr>
                </thead>


                <tbody>
                  <% @insumos.each do |insumo| %>
                                            <td><%= insumo.nombre %></td>
                                            <td><%= insumo.descripcion %></td>
                                            <td><%= insumo.color %></td>
                                            <td><%= insumo.precio %></td>
                                            <td><%= insumo.unidad_medida %></td>
                                            <td><%= insumo.stock_fisico %></td>
                                            <td><%= insumo.stock_reservado %></td>
                                            <td><%= insumo.stock_disponible %></td>
                                            <td><%= insumo.stock_pedido %></td>
                                      <td>
                    <%= link_to insumo_path(insumo) do %>
                      <i class="glyphicon glyphicon-list-alt"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to edit_insumo_path(insumo) do %>
                      <i class="glyphicon glyphicon-pencil"></i>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to insumo_path(insumo.id), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta insumo?' } do %>
                      <i class="glyphicon glyphicon-trash"></i>
                    <% end %>
                    </td>
                  <td>
                    <%= link_to copiar_insumo_path(insumo) do %>
                      <i class="glyphicon glyphicon-duplicate"></i>
                    <% end %>
                  </td>
                  </tr>
                <% end %>
                </tbody>
            </table>
          </div>
          <%= will_paginate @insumos, renderer: BootstrapPagination::Rails %>
          <button type="button" class="btn btn-primary pull-right">
            <%= link_to 'Nuevo insumo', new_insumo_path %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
