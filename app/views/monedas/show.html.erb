
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2><%= Moneda %></h2></div>
        <div class="panel-body">
         <dl class="dl-horizontal">
          <dt>Nombre:</dt>
          <dd><%= @moneda.nombre %></dd>

          <dt>Descripcion:</dt>
          <dd><%= @moneda.descripcion %></dd>

          <dt>Simbolo:</dt>
          <dd><%= @moneda.simbolo %></dd>

          <dt>Tipodecambio:</dt>
          <dd><%= @moneda.tipoDeCambio %></dd>

        </dl>
        </div>
      </div>
    </div>
      <%= link_to monedas_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Monedas
      <% end %>
      <%= link_to moneda_path(@moneda), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta moneda?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_moneda_path(@moneda),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>