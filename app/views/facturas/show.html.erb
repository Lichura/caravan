
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading facturas"><h2>Factura <%= @factura.numero %></h2></div>
        <div class="panel-body">
         <dl class="dl-horizontal">
          <dt>Cuit:</dt>
          <dd><%= @factura.cuit %></dd>
          <dt>Fecha:</dt>
          <dd><%= @factura.fecha %></dd>
          <dt>Control:</dt>
          <dd><%= @factura.control %></dd>
          <dt>Vendedor:</dt>
          <dd><%= @factura.vendedor %></dd>
          <dt>Pto venta:</dt>
          <dd><%= @factura.pto_venta %></dd>
          <dt>Numero:</dt>
          <dd><%= @factura.numero %></dd>
          <dt>Tipo:</dt>
          <dd><%= @factura.tipo %></dd>

          <dt>Productos:</dt>
          <dd>
            <div class="tabla-responsive-vertical shadow-z-1">
                  <!-- Table starts here -->
                  <table id="tabla" class="tabla tabla-hover">
                    <thead>
                      <tr>
                      <th>Producto</th>
                      <th>Cantidad</th>
                      <th>Precio</th>
                      <th>Iva</th>
                      <th>Neto</th>
                      <th>Subtotal</th>
                    </tr>
                    </thead>
                    <tbody>
                      <% @factura.factura_items.each do |items| %>
                      <tr>
                        <td data-title="Producto"><%= Producto.find(items.producto_id).nombre %></td>
                        <td data-title="Cantidad"><%= items.cantidad %></td>
                        <td data-title="Precio"><%= items.precio %></td>
                        <td data-title="Iva"><%= items.iva %></td>
                        <td data-title="Neto"><%= items.neto %></td>
                        <td data-title="Subtotal"><%= items.subtotal %></td>
                      </tr>
                      <% end %>
                      </tbody>
                  </table>
            </div>
            </dd>

          <dt>Bonificacion:</dt>
          <dd><%= @factura.bonificacion %></dd>
          <dt>Neto:</dt>
          <dd><%= @factura.neto %></dd>
          <dt>Iva:</dt>
          <dd><%= @factura.iva %></dd>
          <dt>Total:</dt>
          <dd><%= @factura.total %></dd>



        </dl>
        </div>
      </div>
    </div>
      <%= link_to edit_factura_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        facturas
      <% end %>
      <% if current_user.profile_id == 1 %>
        <%= link_to factura_path(@factura), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta provincia?' }, class: 'btn btn-danger pull-right', remote: true do %>
          <span class="glyphicon glyphicon-trash"></span>
          Eliminar
        <% end %>
        <%= link_to edit_factura_path(@factura),  class: 'btn btn-primary' do %>
          <span class="glyphicon glyphicon-pencil"></span>
          Editar
        <% end %>
      <% end %>
      <%= link_to "PDF", factura_path(@factura, :format => 'pdf'),  {class: "btn btn-warning"} %>
  </div>
</div>