<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Perfil:</h2></div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt>Nombre:</dt>
            <dd><%= @profile.nombre %></dd>
            <dt>Descripcion:</dt>
            <dd><%= @profile.descripcion %></dd>
          </dl>
        </div>
      </div>
    </div>
      <%= link_to profiles_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Perfiles
      <% end %>
      <%= link_to profile_path(@profile), method: :delete, data: { confirm: 'Esta seguro que desea eliminar este perfil?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_profile_path(@profile),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>