<%= form_for(@transportista, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @transportista.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@transportista.errors.count, "error") %> prohibited this provincia from being saved:</h4>

      <ul>
      <% @transportista.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dni, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :dni, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cuit, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :cuit, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :destino, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :destino, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :numeroGuia, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :numeroGuia, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dniRetira, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :dniRetira, class: "form-control" %>
