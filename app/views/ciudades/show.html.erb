<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Provincia:</h2></div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt>Pais:</dt>
            <dd><%= @ciudad.pais_id %></dd>

            <dt>Provincia:</dt>
            <dd><%= @ciudad.provincia_id %></dd>

            <dt>Nombre:</dt>
            <dd><%= @ciudad.nombre %></dd>

            <dt>Nombre corto:</dt>
            <dd><%= @ciudad.nombre_corto %></dd>

          </dl>
        </div>
      </div>
    </div>
      <%= link_to ciudades_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Ciudades
      <% end %>
      <%= link_to ciudad_path(@ciudad), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta ciudad?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_ciudad_path(@ciudad),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>