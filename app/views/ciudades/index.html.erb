<p id="notice"><%= notice %></p>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Ciudades</h3></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6 col-lg-offset-3">
          <%= form_tag(ciudades_path, :method => "get", id: "search-form") do %>
            <div class="input-group">
              <%= text_field_tag :search,  params[:search], placeholder: "Buscar ciudades", class: "form-control"%>
              <span class="input-group-btn">
                <%= submit_tag "Buscar", class: 'btn btn-default'%>
              </span>
            </div>
           <% end %>
          </div>
        </div>
      <div class="row" style="height: 100px;"></div>
        <div class="table-responsive">
          <table class="table table-hover">
              <thead style="color: white; background-color:rgba(30,20,20, 0.7);">
            <th>Pais</th>
            <th>Provincia</th>
            <th>Nombre</th>
            <th>Nombre corto</th>
            <th>Mostrar</th>
            <th>Editar</th>
            <th>Eliminar</th>
          </thead>

    <tbody>
      <% @ciudades.each do |ciudad| %>
            <td><%= ciudad.pais_id %></td>
            <td><%= ciudad.provincia_id %></td>
            <td><%= ciudad.nombre %></td>
            <td><%= ciudad.nombre_corto %></td>
              <td>
                <%= link_to ciudad_path(ciudad) do %>
                  <i class="glyphicon glyphicon-list-alt"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_ciudad_path(ciudad) do %>
                 <i class="glyphicon glyphicon-pencil"></i>
                <% end %>
              </td>
              <td>
                <%= link_to ciudad_path(ciudad.id), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta ciudad?' }, remote: true do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
      <% end %>
    </tbody>
  </table>
</div>
    <%= will_paginate @ciudades, renderer: BootstrapPagination::Rails %>
      <button type="button" class="btn btn-primary pull-right">
        <%= link_to 'Nueva ciudad', new_ciudad_path %>
      </button>
</div>

</div>
</div>
</div>
