<%= form_for(@provincia, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @provincia.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@provincia.errors.count, "error") %> prohibited this provincia from being saved:</h4>

      <ul>
      <% @provincia.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :pais_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :pais_id, @paises , {}, {:multiple => false, :class => "form-control"}  %>    
    </div>
  </div>
  <div class="form-group">
    <%= f.label :codigoAfip, "Codigo Afip", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :codigoAfip, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nombre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :nombre_corto, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre_corto, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Enviar", class: "btn btn-primary" %>
      
        <%= link_to provincias_path, class: 'btn btn-default pull-right' do %>
          Cancelar
        <% end %>
    </div>
  </div>
<% end %>
