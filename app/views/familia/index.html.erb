<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Familia de productos</h3></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6 col-lg-offset-3">
            <%= form_tag(familia_path, :method => "get", id: "search-form") do %>
            <div class="input-group">
              <%= text_field_tag :search,  params[:search], placeholder: "Buscar familia de productos", class: "form-control"%>
              <span class="input-group-btn">
                <%= submit_tag "Buscar", class: 'btn btn-default'%>
              </span>
            </div>
           <% end %>
          </div>
        </div>
      <div class="row" style="height: 50px;"></div>
        <div class="table-responsive">
          <table class="table table-hover">
              <thead style="color: white; background-color:rgba(30,20,20, 0.7);">
                <tr>
                  <th>Nombre</th>
                  <th>Descripcion</th>
                  <th>Mostrar</th>
                  <th>Editar</th>
                  <th>Eliminar</th>
                </tr>
              </thead>

  <tbody>
    <% @familia.each do |familium| %>
      <tr>
        <td><%= familium.nombre %></td>
        <td><%= familium.descripcion %></td>
              <td>
                <%= link_to familium_path(familium) do %>
                  <i class="glyphicon glyphicon-list-alt"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_familium_path(familium) do %>
                 <i class="glyphicon glyphicon-pencil"></i>
                <% end %>
              </td>
              <td>
                <%= link_to familium_path(familium.id), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta familia de productos?'} do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
          </tr>
        <% end %>
  </tbody>
</table>
</div>
    <%= will_paginate @familia, renderer: BootstrapPagination::Rails %>
      <button type="button" class="btn btn-primary pull-right">
        <%= link_to 'Nueva familia', new_familium_path %>
      </button>
</div>

</div>
</div>
</div>
