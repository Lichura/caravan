
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Familia:</h2></div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt>Nombre:</dt>
            <dd><%= @familium.nombre%></dd>
            <dt>Descripcion:</dt>
            <dd><%= @familium.descripcion %></dd>
          </dl>
        </div>
      </div>
    </div>
      <%= link_to familium_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Ciudades
      <% end %>
      <%= link_to familium_path(@familium), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta ciudad?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_familium_path(@familium),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>