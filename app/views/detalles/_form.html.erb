<%= form_for(@detalle, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @detalle.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@detalle.errors.count, "error") %> prohibited this detalle from being saved:</h4>

      <ul>
      <% @detalle.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :pedido_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :pedido_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :producto_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :producto_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cantidad, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :cantidad, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :precio, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :precio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
