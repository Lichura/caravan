
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Paises</h3></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6 col-lg-offset-3">
          <%= form_tag(paises_path, :method => "get", id: "search-form") do %>
            <div class="input-group">
              <%= text_field_tag :search,  params[:search], placeholder: "Buscar paises", class: "form-control"%>
              <span class="input-group-btn">
              <%= submit_tag "Buscar", class: 'btn btn-default'%>
              </span>
            </div>
            <% end %>
          </div>
        </div>
      <div class="row" style="height: 100px;"></div>
        <div class="table-responsive">
          <table class="table table-hover">
              <thead style="color: white; background-color:rgba(30,20,20, 0.7);">
                <th>Nombre</th>
                <th>Abreviacion</th>
                <th>Mostrar</th>
                <th>Editar</th>
                <th>Eliminar</th>
              </thead>
          <tbody>
            <% @paises.each do |pais| %>
            <tr><!-- se podria utilizar para ver el proximo turno -->
              <td><%= pais.nombre %></td>
              <td><%= pais.abreviacion %></td>
              <td>
                <%= link_to pais_path(pais) do %>
                  <i class="glyphicon glyphicon-list-alt"></i>
                <% end %>
              </td>
              <td>
                <%= link_to edit_pais_path(pais) do %>
                 <i class="glyphicon glyphicon-pencil"></i>
                <% end %>
              </td>
              <td>
                <%= link_to pais_path(pais.id), method: :delete, data: { confirm: 'Esta seguro que desea eliminar este pais?' }, remote: true do %>
                  <i class="glyphicon glyphicon-trash"></i>
                <% end %>
              </td>
            </tr>  
            <% end %>
          </tbody>
      </table>
    </div>
    <%= will_paginate @paises, renderer: BootstrapPagination::Rails %>
      <button type="button" class="btn btn-primary pull-right">
        <%= link_to 'Nuevo Pais', new_pais_path %>
      </button>
</div>

</div>
</div>
</div>



