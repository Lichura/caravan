
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>condicion_pago</h2></div>
        <div class="panel-body">
         <dl class="dl-horizontal">

          <dt>Nombre:</dt>
          <dd><%= @condicion_pago.nombre %></dd>

          <dt>Descripcion:</dt>
          <dd><%= @condicion_pago.descripcion %></dd>

          <dt>Dias:</dt>
          <dd><%= @condicion_pago.dias %></dd>

        </dl>
        </div>
      </div>
    </div>
      <%= link_to edit_condicion_pago_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        condicion_pagos
      <% end %>
      <%= link_to condicion_pago_path(@condicion_pago), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta provincia?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_condicion_pago_path(@condicion_pago),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>