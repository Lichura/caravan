
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3>Relaciones</h3></div>
    <p id="notice"><%= notice %></p>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6 col-sm-offset-3">
            <%= form_tag(relacions_path, :method => "get", id: "search-form") do %>
            <div class="input-group">
              <%= text_field_tag :search,  params[:search], placeholder: "Buscar relaciones", class: "form-control"%>
              <span class="input-group-btn">
                <%= submit_tag "Buscar", class: 'btn btn-default'%>
              </span>
            </div>
           <% end %>
          </div>
        </div>
      <div class="row" style="height: 50px;"></div>
        <div class="table-responsive">
          <table class="table table-hover">
              <thead style="color: white; background-color:rgba(30,20,20, 0.7);">
                <tr>
                  <th>Distribuidor</th>
                  <th>Cliente</th>
                  <th>Mostrar</th>
                  <th>Editar</th>
                  <th>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                <% @relacions.each do |relacion| %>
                <tr>
                      <td><%= User.find(relacion.user_id).razonSocial %></td>
                      <td><%= User.find(relacion.cliente_id).razonSocial %></td>
                      <td>
                        <%= link_to relacion_path(relacion) do %>
                          <i class="glyphicon glyphicon-list-alt"></i>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to edit_relacion_path(relacion) do %>
                         <i class="glyphicon glyphicon-pencil"></i>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to relacion_path(relacion.id), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta relacion?' }, remote: true do %>
                        <i class="glyphicon glyphicon-trash"></i>
                        <% end %>
                      </td>
                    </tr>
                <% end %>
              </tbody>
            </table>
          </div>
    <%= will_paginate @relacions, renderer: BootstrapPagination::Rails %>
      <button type="button" class="btn btn-primary pull-right">
        <%= link_to 'Nueva relacion', new_provincia_path %>
      </button>
</div>

</div>
</div>
</div>