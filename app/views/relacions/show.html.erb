<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2>Relaciones:</h2></div>
        <div class="panel-body">
          <dl class="dl-horizontal">
            <dt>Distribuidor:</dt>
            <dd><%= User.find(@relacion.user_id).razonSocial %></dd>

              <dt>Cliente:</dt>
            <dd><%= User.find(@relacion.cliente_id).razonSocial %>
            </dd>


          </dl>
        </div>
      </div>
    </div>
      <%= link_to relacions_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        Provincias
      <% end %>
      <%= link_to relacion_path(@relacion), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta provincia?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <% end %>
      <%= link_to edit_relacion_path(@relacion),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <% end %>
  </div>
</div>



