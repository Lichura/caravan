<p id="notice"><%%= notice %></p>
<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading"><h3><%= plural_table_name %></h3></div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-6 col-sm-offset-3">
            <div class="input-group">
              <input type="text" class="form-control">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
          </div>
        </div>
        <div class="row" style="height: 100px;"></div>
          <div class="table-responsive">
            <table class="table table-hover">
                <thead style="color: white; background-color:rgba(30,20,20, 0.7);">
                  <tr>
                    <% attributes.each do |attribute| -%>
                        <th><%= attribute.human_name %></th>
                    <%- end %>
                    <th>Mostrar</th>
                    <th>Editar</th>
                    <th>Eliminar</th>
                  </tr>
                </thead>


                <tbody>
                  <%%= @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
                    <% attributes.each do |attribute| -%>
                        <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
                    <% end -%>
                  <td>
                    <%%= link_to <%= singular_table_name %>_path(<%= singular_table_name %>) do %>
                      <i class="glyphicon glyphicon-list-alt"></i>
                    <%% end %>
                  </td>
                  <td>
                    <%%= link_to edit_<%= singular_table_name %>_path(<%= singular_table_name %>) do %>
                      <i class="glyphicon glyphicon-pencil"></i>
                    <%% end %>
                  </td>
                  <td>
                    <%%= link_to <%= singular_table_name %>_path(<%= singular_table_name %>.id), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta <%= singular_table_name %>?' }, remote: true do %>
                      <i class="glyphicon glyphicon-trash"></i>
                    <%% end %>
                    </td>
                  </tr>
                <%% end %>
                </tbody>
            </table>
          </div>
          <%%= will_paginate @<%= plural_table_name %>, renderer: BootstrapPagination::Rails %>
          <button type="button" class="btn btn-primary pull-right">
            <%%= link_to 'Nueva <%= singular_table_name %>', new_<%= singular_table_name %>_path %>
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
