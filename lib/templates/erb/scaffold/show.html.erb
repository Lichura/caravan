
<div class="container">
  <div class="panel-group">
    <div class="panel panel-default">
      <div class="panel-heading"><h2><%= singular_table_name %></h2></div>
        <div class="panel-body">
         <dl class="dl-horizontal">
          <%- attributes.each do |attribute| -%>
          <dt><%= attribute.human_name %>:</dt>
          <dd><%%= @<%= singular_table_name %>.<%= attribute.name %> %></dd>

          <%- end -%>
        </dl>
        </div>
      </div>
    </div>
      <%%= link_to edit_<%= singular_table_name %>_path, class: 'btn btn-default pull-right' do %>
        <span class="glyphicon glyphicon-list-alt"></span>
        <%= plural_table_name %>
      <%% end %>
      <%%= link_to <%= singular_table_name %>_path(@<%= singular_table_name %>), method: :delete, data: { confirm: 'Esta seguro que desea eliminar esta provincia?' }, class: 'btn btn-danger pull-right', remote: true do %>
        <span class="glyphicon glyphicon-trash"></span>
        Eliminar
      <%% end %>
      <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>),  class: 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-pencil"></span>
        Editar
      <%% end %>
  </div>
</div>